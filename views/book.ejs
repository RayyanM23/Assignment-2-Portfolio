<%- include Partials/header.ejs%>
<%- include Partials/main_nav.ejs%>
<!--Book Database-->
<main class="container">
    <div class="row">
        <div class="offset-md-1 col-md-10">
            <h1><%= title %></h1>
            <br>
            <table class="table table-bordered table-striped table-hover">
                <tr class="d-flex">
                    <th class="col-2">Name</th>
                    <th class="col-2">Author</th>
                    <th class="col-1">Published</th>
                    <th class="col-6">Description</th>
                    <th class="col-1">Price</th>
                </tr>
                <% for(let count=0;count<BookList.length;count++) { %>
                <tr class="d-flex">
                    <td class="col-2"><%= BookList[count].Name %></td>
                    <td class="col-2"><%= BookList[count].Author %></td>
                    <td class="col-1"><%= BookList[count].Published %></td>
                    <td class="col-6"><%= BookList[count].Description %></td>
                    <td class="col-1">$<%= BookList[count].Price %></td>
                </tr>
                <% } %>
            </table>
        </div>
    </div>
</main>
<%- include Partials/footer.ejs%>