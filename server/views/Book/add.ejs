<%- include ../Partials/header.ejs%>
<%- include ../Partials/main_nav.ejs%>
<!--Content for Add Page-->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <a href="/books" class="btn btn-primary" role="button">
                <i class="fa-solid fa-arrow-left"></i> Back
            </a>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Book Title</label>
                    <input type="text" class="form-control" id="nameTextField" placeholder="Enter the Book Title" name="Name" required>
                </div>
                <div class="form-group">
                    <label for="authorTextField">Book Author</label>
                    <input type="text" class="form-control" id="authorTextField" placeholder="Enter the Book Author" name="Author" required>
                </div>
                <div class="form-group">
                    <label for="publishedTextField">Published</label>
                    <input type="text" class="form-control" id="publishedTextField" placeholder="Enter the Published Date" name="Published" required>
                </div>
                <div class="form-group">
                    <label for="descriptionTextArea">Book Description</label>
                    <textarea type="text" class="form-control" id="descriptionTextArea" placeholder="Enter the Book Description" name="Description" required></textarea>
                </div>
                <div class="form-group">
                    <label for="priceTextField">Book Price</label>
                    <input type="text" class="form-control" id="priceTextField" placeholder="Enter the Book Price" name="Price" required>
                </div>
                <br>
                <button class="btn btn-primary" type="submit">Submit <i class="fas fa-edit"></i></button>
                <button class="btn btn-warning" type="reset">Cancel <i class="fa-solid fa-ban"></i></button>
            </form>
        </div>
    </div>
</div>
<%- include ../Partials/footer.ejs%>